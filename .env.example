# Environment Variables for Solid Rock Business Solutions

# Site Configuration
SITE_URL=https://solid-rock.co.za

# reCAPTCHA Configuration (v3)
# Get these from Google reCAPTCHA admin console
RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Default email configuration
DEFAULT_EMAIL_FROM=no-reply@solid-rock.co.za
DEFAULT_EMAIL_TO=info@solid-rock.co.za

# SMTP Provider Configuration
# Available providers: gmail, mailtrap, mailgun, sendgrid, zoho, ses
DEFAULT_SMTP_PROVIDER=gmail

# Gmail SMTP Configuration
SMTP_GMAIL_HOST=smtp.gmail.com
SMTP_GMAIL_PORT=587
SMTP_GMAIL_SECURE=false
SMTP_GMAIL_USER=your-gmail-username@gmail.com
SMTP_GMAIL_PASS=your-app-password-here
SMTP_GMAIL_FROM_NAME="Solid Rock Business Solutions"

# Mailtrap SMTP Configuration (for testing)
SMTP_MAILTRAP_HOST=sandbox.smtp.mailtrap.io
SMTP_MAILTRAP_PORT=587
SMTP_MAILTRAP_SECURE=false
SMTP_MAILTRAP_USER=your-mailtrap-username
SMTP_MAILTRAP_PASS=your-mailtrap-password
SMTP_MAILTRAP_FROM_NAME="Solid Rock Business Solutions Test"

# Mailgun SMTP Configuration
SMTP_MAILGUN_HOST=smtp.mailgun.org
SMTP_MAILGUN_PORT=587
SMTP_MAILGUN_SECURE=false
SMTP_MAILGUN_USER=postmaster@your-domain.mailgun.org
SMTP_MAILGUN_PASS=your-mailgun-password
SMTP_MAILGUN_FROM_NAME="Solid Rock Business Solutions"

# SendGrid SMTP Configuration
SMTP_SENDGRID_HOST=smtp.sendgrid.net
SMTP_SENDGRID_PORT=587
SMTP_SENDGRID_SECURE=false
SMTP_SENDGRID_USER=apikey
SMTP_SENDGRID_PASS=your-sendgrid-api-key
SMTP_SENDGRID_FROM_NAME="Solid Rock Business Solutions"

# Zoho SMTP Configuration
SMTP_ZOHO_HOST=smtp.zoho.com
SMTP_ZOHO_PORT=587
SMTP_ZOHO_SECURE=false
SMTP_ZOHO_USER=your-zoho-email@zoho.com
SMTP_ZOHO_PASS=your-zoho-password
SMTP_ZOHO_FROM_NAME="Solid Rock Business Solutions"

# AWS SES SMTP Configuration
SMTP_SES_HOST=email-smtp.us-east-1.amazonaws.com  # Change region as needed
SMTP_SES_PORT=587
SMTP_SES_SECURE=false
SMTP_SES_USER=your-smtp-username
SMTP_SES_PASS=your-smtp-password
SMTP_SES_FROM_NAME="Solid Rock Business Solutions"

# Anti-spam Configuration
ANTISPAM_EMAIL_LIMIT=10
ANTISPAM_EMAIL_DURATION=3600
ANTISPAM_MAX_LINKS=5
ANTISPAM_MAX_CAPS_RATIO=0.7
ANTISPAM_MAX_RECIPIENTS=10